    cp "${BUILD_PATH}/tmp/shutdown-nulstar" "${MODULES_BIN_PATH}/shutdown"
	chmod u+x "${MODULES_BIN_PATH}/shutdown"
	cp "${BUILD_PATH}/tmp/check-status-temp" "${MODULES_BIN_PATH}/check-status"
	chmod u+x "${MODULES_BIN_PATH}/check-status"
